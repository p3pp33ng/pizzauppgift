@model NackaPizzaOnline.Models.DishIngredient

@{
    ViewData["Title"] = "Ta bort";
}

<h2>Ta bort</h2>

<h3>Är du säker på att du vill ta bort?</h3>
<div>
    <h4>Maträttsingedienser</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Dish)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Dish.DishId)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Ingredient)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Ingredient.IngredientId)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="DishId" />
        <input type="hidden" asp-for="IngredientId" />
        <input type="submit" value="Ta bort" class="btn btn-default" /> |
        <a asp-action="Index">Tillbaka</a>
    </form>
</div>
