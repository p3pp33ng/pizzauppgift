@model NackaPizzaOnline.Models.EditViewModels.CreateViewModel

@{
    ViewData["Title"] = "Lägga till";
}

<h2>Lägga till</h2>

<h4>Maträtt</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @*<div class="form-group">
                    <label asp-for="Picture" class="control-label"></label>
                    <input asp-for="Picture" class="form-control" />
                    <span asp-validation-for="Picture" class="text-danger"></span>
                </div>*@
            <div class="form-group">
                <label asp-for="Dish.Name" class="control-label"></label>
                <input asp-for="Dish.Name" class="form-control" />
                <span asp-validation-for="Dish.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Dish.Price" class="control-label"></label>
                <input asp-for="Dish.Price" class="form-control" />
                <span asp-validation-for="Dish.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Dish.Category" class="control-label"></label>
                @Html.DropDownListFor(model => model.Dish.Category.CategoryId, Model.Categories, null, new { @class="form-control" })
                <span asp-validation-for="Dish.Category" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ingredients" class="control-label"></label><br />
                @for (var i = 0; i < Model.Ingredients.Count; i++)
                {                    
                    @Html.CheckBoxFor(model=>model.Ingredients[i].Selected)
                    @Html.HiddenFor(model => model.Ingredients[i].Value)
                    @Html.HiddenFor(model => model.Ingredients[i].Text)
                    <span>@Model.Ingredients[i].Text</span>
                }                
                <span asp-validation-for="Ingredients" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Lägg till" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Tillbaka</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

