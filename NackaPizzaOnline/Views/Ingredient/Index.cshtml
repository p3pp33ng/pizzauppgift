@model IEnumerable<NackaPizzaOnline.Models.Ingredient>

@{
    ViewData["Title"] = "Ingrediens";
}

<h2>Ingrediens</h2>

<p>
    <a asp-action="Create">Lägga till</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PriceIfExtra)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PriceIfExtra)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IngredientId">Ändra</a> |
                <a asp-action="Details" asp-route-id="@item.IngredientId">Detaljer</a> |
                <a asp-action="Delete" asp-route-id="@item.IngredientId">Ta bort</a>
            </td>
        </tr>
}
    </tbody>
</table>
