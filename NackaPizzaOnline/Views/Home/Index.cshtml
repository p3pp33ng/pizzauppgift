@model NackaPizzaOnline.Models.HomeViewModels.MenyViewModel
@{
    ViewData["Title"] = "Nacka Pizzeria Online";
}
<h2>Meny</h2>
<div class="row">
    <div class="col-md-8">
        <table class="table">           
                @foreach (var item in Model.Dishes)
            {
                    <tr>
                        <td>
                            <div>
                                <p>@item.Name</p>
                                <button id="ingredientsbtn">
                                    @*TODO ska vara en knapp för att lägga till/ta bort ingredienser, ska leda till en modal*@
                                </button>
                                <button id="buybtn">
                                    @*TODO Ska vara knappen för att köpa maträtten*@
                                </button>
                                <br />
                                @foreach (var ingredient in item.DishIngredients)
                                {
                                    <p>@ingredient.Ingredient.Name</p> @*TODO Lägga ingredienser i block och inte column riktning*@
                                }
                            </div>
                        </td>
                    </tr>
                }
        </table>
    </div>
</div>
<div class="cartview">
    @Html.Partial("_CartView");
</div>

