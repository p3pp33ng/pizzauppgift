@model CustomizeViewModel

    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">@Model.Dish.Name</h4>
            </div>
            <div class="modal-body">
                <table id="ingredientTable">    
                    @for (var i = 0; i < Model.Ingredients.Count; i++)
                    {
                        <tr>
                            <td>
                                @Html.CheckBoxFor(model => model.Ingredients[i].Selected, new { @Id="Ingredient"+i })
                                @Html.HiddenFor(model => model.Ingredients[i].Value)
                                @Html.HiddenFor(model => model.Ingredients[i].Text)
                                <span>@Model.Ingredients[i].Text</span>
                            </td>
                        </tr>
                    }        
