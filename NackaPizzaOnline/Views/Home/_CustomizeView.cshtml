@model CustomizeViewModel

    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">@Model.Dish.Name</h4>
            </div>
            <div class="modal-body">
                <table>                    
                        @foreach (var ingredient in Model.Ingredients)
                        {
                            <tr>
                                <td>
                                    @if (ingredient.Selected == true)
                                    {
                                        <label>@ingredient.Text</label>
                                        <input type="checkbox" name="@ingredient.Text" checked />
                                    }
                                    else
                                    {
                                        <label>@ingredient.Text</label>
                                        <input type="checkbox" name="@ingredient.Text" />
                                    }
                                </td>
                            </tr>
                        }                            
                </table>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-success" onclick="">Köp</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Avbryt</button>
            </div>
        </div>
    </div>
